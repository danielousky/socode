%h1 Listing snippets
.table-response
  %table.table.table-striped.table-hover.table-bordered 
    %thead
      %tr
        %th Title
        %th Content
        %th Categories
        %th
        %th
        %th

    %tbody
      - @snippets.each do |snippet|
        %tr
          %td= snippet.title
          %td= snippet.content
          %td
            - snippet.categories.map do |c|
              = link_to c.name, category_path(c), class: 'badge', style: "background-color: #{c.color}"
          %td= link_to 'Show', snippet
          %td= link_to 'Edit', edit_snippet_path(snippet)
          %td= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?', 'turbo-method': :delete }

%br

= link_to 'New Snippet', new_snippet_path
